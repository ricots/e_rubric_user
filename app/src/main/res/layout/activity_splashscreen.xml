<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="unikama.acer.e_rubic.activity.splashscreen"
    android:background="#FFB74D"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="30dp"
            android:src="@drawable/logo_unikama" />

        <TextView
            android:id="@+id/rubic"
            android:textColor="#000"
            android:textSize="24dp"
            android:textStyle="bold"
            android:padding="5dp"
            android:gravity="center_horizontal"
            android:text="E-RUBRIC"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/desc"
            android:layout_below="@id/rubic"
            android:textColor="#000"
            android:textSize="20dp"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:text="E-RUBRIC merupakan lembar observasi Lesson Study berbasis android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignParentBottom="true"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:text="Copyright : \n Muhammad Nur Hudha \n Choirul Huda \n Sudi Dul Aji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

</RelativeLayout>
